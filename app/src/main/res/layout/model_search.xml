<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardMaxElevation="0dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/airterjunlubuakhitam_xxxhdpi" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:maxLines="2"
                android:text="Air terjun lubuak hitam"
                android:textColor="@color/black"
                android:fontFamily="@font/rubikmedium"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/jarak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.5 km"
                android:layout_marginTop="6dp"
                android:textColor="@color/grey2"
                android:fontFamily="@font/rubikreguler"
                android:textSize="13sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/imagewaktu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_ic_clock"/>
                <TextView
                    android:id="@+id/jadwal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buka"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/blue"
                    android:textSize="13sp"
                    android:fontFamily="@font/rubikreguler"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
   <View
       android:id="@+id/View"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:layout_marginVertical="16dp"
       android:background="@color/grey3"/>

</LinearLayout>